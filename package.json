{
    "name": "gmail",
    "label": "Gmail Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.3.7",
            "instanceId": "shared"
        }
    ],
    "configuration": [
        {
            "label": "Client Id",
            "name": "clientId",
            "type": "text"
        },
        {
            "label": "Client Secret",
            "name": "clientSecret",
            "type": "text"
        },
        {
            "name": "GMAIL_API_BASE_URL",
            "label": "Gmail Api Url",
            "type": "label",
            "value": "https://gmail.googleapis.com/gmail/v1"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Happens when Gmail sends a webhook to the package."
        },
        {
            "label": "User connected to gmail",
            "name": "userConnected",
            "description": "Happens when a user successfully connects to Gmail ."
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "flowStep",
            "namespace": "steps",
            "path": "/flowSteps/apiCallGmail"
        }
    ]
}