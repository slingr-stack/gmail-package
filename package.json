{
    "name": "gmail",
    "label": "Gmail Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "~v1.3.7",
            "instanceId": "shared"
        },
        {
            "type": "package",
            "name": "oauth",
            "version": "~v1.0.20"
        }
    ],
    "configurationBuilder": "/configurationBuilder.js",
    "configuration": [
        {
            "label": "Configuration id",
            "description": "Id used to store tokens",
            "name": "id",
            "type": "text"
        },
        {
            "label": "Client Id",
            "name": "clientId",
            "type": "text"
        },
        {
            "label": "Client Secret",
            "name": "clientSecret",
            "type": "text"
        },
        {
            "name": "oauthCallback",
            "label": "OAuth callback",
            "description": "The OAuth callback to configure in your Gmail App",
            "type": "label",
            "value": "config.AUTH_CALLBACK_URL+'/authCallback'"
        },
        {
            "name": "webhooksUrl",
            "label": "Webhooks URL",
            "description": "The URL to configure in webhooks of your Gmail App",
            "type": "label",
            "value": "config.WEBHOOK_URL"
        },
        {
            "name": "GMAIL_API_BASE_URL",
            "label": "Gmail Api Url",
            "type": "label",
            "value": "https://gmail.googleapis.com/gmail/v1"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Happens when Gmail sends a webhook to the package."
        },
        {
            "label": "User connected to gmail",
            "name": "userConnected",
            "description": "Happens when a user successfully connects to Gmail ."
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "listener",
            "namespace": "listeners",
            "path": "/listeners/listeners.js"
        },
        {
            "type": "flowStep",
            "namespace": "steps",
            "path": "/flowSteps/apiCallGmail"
        }
    ]
}